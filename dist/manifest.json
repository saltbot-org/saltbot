{
	"manifest_version": 2,
	"name": "SaltBot",
	"description": "This extension automates betting on SaltyBet.com.",
	"version": "2.5.0",
	"permissions": [
		"storage",
		"unlimitedStorage",
		"declarativeContent",
		"tabs",
		"alarms"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*.saltybet.com/",
				"https://*.saltybet.com/"
			],
      "js": [
        "js/lib/FileSaver.min.js",
        "js/lib/jquery.min.js",
        "js/lib/jquery-ui.min.js",
        "js/lib/moment.min.js",
        "js/lib/idb.js",
        "js/utils.js",
        "js/records.js",
        "js/tracker.js",
        "js/strategy.js",
        "js/salty.js",
        "js/lib/date.js"
      ]
		},
		{
      "matches": [
        "http://www.twitch.tv/saltybet/chat",
        "https://www.twitch.tv/saltybet/chat",
        "https://www.twitch.tv/popout/saltybet/chat"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/lib/moment.min.js",
        "js/lib/idb.js",
        "js/utils.js",
        "js/twitch_content.js"
      ]
		}
	],
	"background": {
		"persistent": false,
    "scripts": [
      "js/lib/idb.js",
      "js/utils.js",
      "js/records.js",
      "js/twitch_background.js"
    ]
	},
	"page_action": {
		"default_icon": "images/32.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},
	"web_accessible_resources": [
		"images/ui-icons*.png",
		"css/jquery-ui.css"
	]
}