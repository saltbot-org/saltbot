{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
  "rules": {
    "allow-snake-case",
    "no-var-keyword": false,
    "no-shadowed-variable": true,
    "indent": [ true, "tabs", 4 ],
    "only-arrow-functions": false,
    "no-console": false,
    "comment-format": false,
    "one-line": false,
    "eofline": false,
    "max-line-length": false,
    "no-bitwise":  false
  },
    "rulesDirectory": []
}
